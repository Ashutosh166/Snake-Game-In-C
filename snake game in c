
#include <stdio.h>
#include <conio.h>   // for _kbhit() and _getch()
#include <stdlib.h>  // for rand()
#include <windows.h> // for Sleep()
#include <time.h>    // for srand()

#define WIDTH 50
#define HEIGHT 20
#define MAX 100   // max snake length

int snakeX[MAX], snakeY[MAX]; // snake positions
int snakeLength;              // current length
int foodX, foodY;             // food
int dir;                      // direction
int score = 0;
int gameOver = 0;

// make random food
void makeFood() {
    foodX = rand() % WIDTH;
    foodY = rand() % HEIGHT;
}

// draw the game
int draw() {
    system("cls");

    for (int i = 0; i < WIDTH + 2; i++) printf("#");
    printf("\n");

    for (int y = 0; y < HEIGHT; y++) {
        printf("#");
        for (int x = 0; x < WIDTH; x++) {
            
            int printed = 0;
            // draw snake
            for (int i = 0; i < snakeLength; i++) {
                if (snakeX[i] == x && snakeY[i] == y) {
                    if (i == 0)
                        printf("X"); // head
                    else
                        printf("o"); // body
                    printed = 1;
                    break;
                }
            }

            // draw food
            if (x == foodX && y == foodY && !printed) {
                printf("F");
                printed = 1;
            }

            if (!printed) printf(" ");
        }
        printf("#\n");
    }

    for (int i = 0; i < WIDTH + 2; i++) printf("#");
    printf("\nScore: %d\n", score);
}

// take input
void input() {
    if (_kbhit()) {
        char ch = _getch();
        if ((ch == 'w' || ch == 'W') && dir != 1) dir = 0;
        else if ((ch == 's' || ch == 'S') && dir != 0) dir = 1;
        else if ((ch == 'a' || ch == 'A') && dir != 3) dir = 2;
        else if ((ch == 'd' || ch == 'D') && dir != 2) dir = 3;
        else if (ch == 'q' || ch == 'Q') gameOver = 1;
    }
}

// move snake
void move() {
    // move body
    for (int i = snakeLength - 1; i > 0; i--) {
        snakeX[i] = snakeX[i - 1];
        snakeY[i] = snakeY[i - 1];
    }

    // move head
    if (dir == 0) snakeY[0]--;
    else if (dir == 1) snakeY[0]++;
    else if (dir == 2) snakeX[0]--;
    else if (dir == 3) snakeX[0]++;

    // hit wall
    if (snakeX[0] < 0 || snakeX[0] >= WIDTH || snakeY[0] < 0 || snakeY[0] >= HEIGHT)
        gameOver = 1;

    // hit self
    for (int i = 1; i < snakeLength; i++) {
        if (snakeX[0] == snakeX[i] && snakeY[0] == snakeY[i])
            gameOver = 1;
    }

    // eat food
    if (snakeX[0] == foodX && snakeY[0] == foodY) {
        if (snakeLength < MAX) snakeLength++;
        score += 10;
        makeFood();
    }
}

int main() {
    srand(time(NULL));

    // start position
    snakeLength = 3;
    snakeX[0] = WIDTH / 2;
    snakeY[0] = HEIGHT / 2;
    snakeX[1] = snakeX[0] - 1;
    snakeY[1] = snakeY[0];
    snakeX[2] = snakeX[1] - 1;
    snakeY[2] = snakeY[1];
    dir = 3; // start moving right

    makeFood();

    while (!gameOver) {
        draw();
        input();
        move();
        Sleep(100); // slow down
    }

    printf("\nGame Over! Final Score: %d\n", score);
    return 0;
}
